<form>
    <div class="form-group">
        <label for="">Title</label>
        <Input @type="text" class="form-control" @value={{this.title}} placeholder="Add task..."/>
    </div>
     <div class="form-group">
        <label>Due Date</label>
        <Input @type="date" class="form-control" @value={{date}}/>
    </div>
    <div class="form-group">
        <label>Description</label>
        <Textarea class="form-control" @value={{this.description}} placeholder="Describe the task..."/>
    </div>
    <button {{action 'addTask'}} class="btn btn-primary">Submit</button>
</form>